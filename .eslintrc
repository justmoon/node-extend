{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"complexity": [2, 15],
		"eqeqeq": [2, "allow-null"],
		"max-depth": [1, 4],
		"max-statements": [2, 25],
		"no-extra-parens": [1],
		"no-magic-numbers": [0],
		"no-restricted-syntax": [2, "BreakStatement", "ContinueStatement", "DebuggerStatement", "LabeledStatement", "WithStatement"]
	}
}
